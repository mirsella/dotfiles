{
	"$schema": "https://opencode.ai/config.json",
	"share": "disabled",
	"plugin": ["opencode-gemini-auth"],
	"formatter": {
		"rustfmt": {
			"command": ["rustfmt", "$FILE"],
			"extensions": [".rs"]
		}
	},
	"keybinds": {
		"model_cycle_recent": "f4",
		"model_cycle_recent_reverse": "shift+f4"
	},
	"mcp": {
		"deepwiki": {
			"type": "remote",
			"url": "https://mcp.deepwiki.com/mcp",
			"enabled": true
		}
	},
	"lsp": {
		"rust": {
			"disabled": true
		},
		"rust-lspmux": {
			"command": ["lspmux", "client"],
			"extensions": [".rs"]
		}
	},
	"permission": {
		"bash": {
			"rm *": "deny",
			"sudo *": "deny",
			"chmod *": "deny",
			"chown *": "deny",
			"git *": "ask",
			"git rebase *": "allow",
			"git commit *": "allow",

			// Package managers (confirm)
			"pnpm *": "ask",
			"npm *": "ask",
			"yarn *": "ask",
			"brew *": "ask",
			"paru *": "ask",
			"pacman *": "ask",

			"curl *": "ask",
			"wget *": "ask"
		}
	}
}
