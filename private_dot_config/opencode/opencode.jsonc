{
	"$schema": "https://opencode.ai/config.json",
	"plugin": [
		"opencode-gemini-auth",
		// "opencode-antigravity-auth",
		"@tarquinen/opencode-dcp",
		"@tarquinen/opencode-smart-title"
	],
	"experimental": {
		"primary_tools": ["prune"]
	},
	"disabled_providers": ["openrouter"],
	"agent": {
		"general": { "tools": { "prune": false } },
		"explore": { "tools": { "prune": false } }
	},
	"formatter": {
		"rustfmt": {
			"command": ["rustfmt", "$FILE"],
			"extensions": [".rs"]
		}
	},
	"keybinds": {
		"model_cycle_recent": "f4",
		"model_cycle_recent_reverse": "shift+f4"
	},
	"mcp": {
		"deepwiki": {
			"type": "remote",
			"url": "https://mcp.deepwiki.com/mcp",
			"enabled": true
		}
	},
	"lsp": {
		"rust": {
			"disabled": true
		},
		"rust-lspmux": {
			"command": ["lspmux", "client"],
			"extensions": [".rs"]
		}
	},
	"permission": {
		"external_directory": "allow",
		"bash": {
			"sudo*": "deny",
			"chmod*": "deny",
			"chown*": "deny",
			"git*": "ask",
			"git rebase*": "allow",
			"git commit*": "allow",
			"git diff*": "allow",
			"git show*": "allow",
			"git status*": "allow",
			"git log*": "allow",
			"git branch*": "allow",
			"git rev-parse*": "allow",
			"git add*": "allow",

			"brew*": "deny",
			"paru*": "deny",
			"pacman*": "deny",

			"curl*": "ask",
			"wget*": "ask"
		}
	},

	"provider": {
		// "github-copilot": {
		// 	"npm": "@opeoginni/github-copilot-openai-compatible",
		// 	"name": "GitHub Copilot",
		// 	"id": "github-copilot"
		// }
		"llm-proxy": {
			"npm": "@ai-sdk/openai-compatible",
			"name": "LLM Proxy",
			"options": {
				"baseURL": "http://127.0.0.1:8000/v1"
			},
			"models": {
				"antigravity/gemini-3-pro-high": {
					"name": "Gemini 3 Pro High (Antigravity)"
					// "limit": {
