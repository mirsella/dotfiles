{
	"$schema": "https://opencode.ai/config.json",
	"share": "disabled",
	"formatter": {
		"rustfmt": {
			"command": ["rustfmt", "$FILE"],
			"extensions": [".rs"]
		}
	},
	"lsp": {
		"rust-analyzer": {
			"command": ["rust-analyzer"],
			"extensions": [".rs"]
		}
	},
	"provider": {
		"ollama": {
			"npm": "@ai-sdk/openai-compatible",
			"options": {
				"baseURL": "http://localhost:11434/v1"
			},
			"models": {
				"gpt-oss:20b": {
					"tool_call": true,
					"reasoning": true
				},
				"qwen3:32b": {
					"tool_call": true,
					"reasoning": true
				},
				"qwen3-coder:30b": {
					"tool_call": true,
					"reasoning": true
				}
			}
		},
		"moonshot-openai-compatible": {
			"npm": "@ai-sdk/openai-compatible",
			"options": {
				"apiKey": "{env:OPENROUTER_API_KEY}",
				"baseURL": "https://openrouter.ai/api/v1"
			},
			"models": {
				"moonshotai/kimi-k2": {}
			}
		}
	}
}
