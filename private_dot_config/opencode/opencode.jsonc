{
	"$schema": "https://opencode.ai/config.json",
	"plugin": [
		"opencode-antigravity-auth",
		"@tarquinen/opencode-dcp",
		"opencode-supermemory",
		"opencode-wakatime",
		"@howaboua/opencode-usage-plugin",
		"@tarquinen/opencode-smart-title"
	],
	"disabled_providers": ["openrouter"],
	"formatter": {
		"rustfmt": {
			"command": ["rustfmt", "$FILE"],
			"extensions": [".rs"]
		}
	},
	"keybinds": {
		"model_cycle_recent": "f4",
		"model_cycle_recent_reverse": "f5"
	},
	// "agent": {
	// 	"explore": {
	// 		"model": "google/gemini-3-flash-preview"
	// 	}
	// },
	"mcp": {
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"headers": {
				"CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
			}
		},
		"deepwiki": {
			"type": "remote",
			"url": "https://mcp.deepwiki.com/mcp"
		},
		"posthog": {
			"type": "remote",
			"url": "https://mcp.posthog.com/mcp",
			"enabled": false
		},
		"railway": {
			"type": "local",
			"command": ["bun", "-y", "@railway/mcp-server"],
			"enabled": false
		}
	},
	"lsp": {
		"rust": {
			"disabled": true
		},
		"rust-lspmux": {
			"command": ["lspmux", "client"],
			"extensions": [".rs"]
		}
	},
	"permission": {
		"external_directory": "allow",
		"bash": {
			"sudo*": "ask",
			"chmod*": "ask",
			"chown*": "ask",
			"paru*": "ask",
			"pacman*": "ask"
		}
	},

	"provider": {
		"github-copilot": {
			"models": {
				"gpt-5.2-codex": {
					"name": "GPT-5.2 Codex",
					"limit": {
						// "context": 400000,
						"context": 300000,
						"output": 128000
						// "input": 272000
					}
				},
				"gpt-5.2": {
					"name": "GPT-5.2",
					"limit": {
						// "context": 400000,
						"context": 300000,
						"output": 128000
						// "input": 272000
					}
				},
				"claude-opus-4.5": {
					"name": "Claude Opus 4.5",
					"limit": { "context": 160000, "input": 128000, "output": 16000 }
				}
			}
		},
		"google": {
			"models": {
				"antigravity-gemini-3-pro": {
					"name": "Gemini 3 Pro (Antigravity)",
					"limit": { "context": 1048576, "output": 65535 },
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"low": { "thinkingLevel": "low" },
						"high": { "thinkingLevel": "high" }
					}
				},
				"antigravity-gemini-3-flash": {
					"name": "Gemini 3 Flash (Antigravity)",
					"limit": { "context": 1048576, "output": 65536 },
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						// "minimal": { "thinkingLevel": "minimal" },
						"low": { "thinkingLevel": "low" },
						// "medium": { "thinkingLevel": "medium" },
						"high": { "thinkingLevel": "high" }
					}
				},
				"antigravity-claude-sonnet-4-5": {
					"name": "Claude Sonnet 4.5 (Antigravity)",
					"limit": { "context": 200000, "output": 64000 },
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					}
				},
				"antigravity-claude-sonnet-4-5-thinking": {
					"name": "Claude Sonnet 4.5 Thinking (Antigravity)",
					"limit": { "context": 200000, "output": 64000 },
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"low": { "thinkingConfig": { "thinkingBudget": 8192 } },
						"max": { "thinkingConfig": { "thinkingBudget": 32768 } }
					}
				},
				"antigravity-claude-opus-4-5-thinking": {
					"name": "Claude Opus 4.5 Thinking (Antigravity)",
					"limit": { "context": 200000, "output": 64000 },
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"low": { "thinkingConfig": { "thinkingBudget": 8192 } },
						"max": { "thinkingConfig": { "thinkingBudget": 32768 } }
					}
				},
				"gemini-2.5-flash": {
					"name": "Gemini 2.5 Flash (Gemini CLI)",
					"limit": { "context": 1048576, "output": 65536 },
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					}
				},
				"gemini-2.5-pro": {
					"name": "Gemini 2.5 Pro (Gemini CLI)",
					"limit": { "context": 1048576, "output": 65536 },
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					}
				},
				"gemini-3-flash-preview": {
					"name": "Gemini 3 Flash Preview (Gemini CLI)",
					"limit": { "context": 1048576, "output": 65536 },
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					}
				},
				"gemini-3-pro-preview": {
					"name": "Gemini 3 Pro Preview (Gemini CLI)",
					"limit": { "context": 1048576, "output": 65535 },
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					}
				}
			}
		}
	}
}
